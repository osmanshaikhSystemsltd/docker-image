pipeline {
    agent any

    stages{
        stage('clear WS'){
            sh 'pwd'
            echo "clearing workspace"
            sh 'rm -rf .'
        }
        stage('image build'){
            steps{
                sh 'docker build -t myimage/customimage .'
                echo '==listing images=='
                sh 'docker images'
                echo 'test'
            }
        }
        stage('image tag'){
            steps{
                sh 'docker tag myimage/customimage:latest osmanshaikh/customimage:latest'
            }
        }
        stage('image push'){
            steps{
                sh 'docker push osmanshaikh/customimage'
            }
        }
    }
}
