pipeline {
    agent any

    stages{
        stage('image build for PRD'){
            when {
                branch "main"
            }
            steps{
                sh 'docker build -t myimage/customimage .'
                echo '==listing images=='
                sh 'docker images'
                echo 'test'
                sh 'docker tag myimage/customimage:latest osmanshaikh/customimage-prd:latest'
                sh 'docker push osmanshaikh/customimage'
            }
        }
        stage('image build for DEV'){
            when {
                branch "dev"
            }
            steps{
                sh 'docker build -t myimage/customimage .'
                echo '==listing images=='
                sh 'docker images'
                echo 'test'
                sh 'docker tag myimage/customimage:latest osmanshaikh/customimage-dev:latest'
                sh 'docker push osmanshaikh/customimage'
            }
        }
    }
}
